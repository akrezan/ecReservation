
@model ec.Reservation.Clients.Web.Models.ReservationViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Reservation</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Creator
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Creator.FirstName)
        </dd>

        <dt>
            Resource
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Resource.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StartTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartTime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EndTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EndTime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreationDateTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreationDateTime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ModifiedDateTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ModifiedDateTime)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Attendees)
        </dt>
        <dd>

            @foreach (var attendee in Model.Attendees)
            {
                <span>
                    @Html.Encode(attendee.FirstName)
                </span>

                <span>
                    @if (@Model.Polls != null && @Model.Polls.Any())
                    {
                       <span> -- </span>  @Model.Polls.FirstOrDefault(x => x.UserId == attendee.Id).Answer
                    }
                </span>
                <span>
                    @if (@Model.Polls != null && @Model.Polls.Any())
                    {
                        @Model.Polls.FirstOrDefault(x => x.UserId == attendee.Id).Comment
                    }
                </span>
                <br />
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CheckLists)
        </dt>
        <dd>

            @foreach (var item in Model.CheckLists)
            {
                <span>

                    @Html.Encode(item.Name),

                </span>
            }
        </dd>


    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
